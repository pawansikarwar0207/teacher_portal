<div class="container col-lg-4 mx-auto">
  <div class="card shadow rounded-0">
    <h2 class="card-title text-center mt-2">Forgot your password?</h2>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "teachers/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %>
          <div class="input-group mt-2 mb-2">
            <span class="input-group-text rounded-0" id="basic-addon1"><i class="fa-solid fa-user"></i></span>
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control rounded-0', 'aria-describedby': 'basic-addon1' %>
          </div>
        </div>

        <div class="actions d-flex justify-content-center">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-dark rounded-0 mt-5' %>
        </div>
        <div class="d-flex justify-content-center">
          <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-dark rounded-0 mt-2 mx-2' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-dark rounded-0 mt-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>